@model Blog.Models.Post

<div>
   
    <hr />
    <dl class="dl-horizontal">

        <dd>
            <p style="text-align:center">
                <strong>@Html.DisplayFor(model => model.post_Title)</strong>
            </p>
        </dd>
        
        <dd>
            <p style="text-align:center">
                @Html.DisplayFor(model => model.post_Content)
            </p>
        </dd>

        
         @if (Model.Images.Any(f => f.Image_Type == Blog.Models.ImageType.Avatar))
        {
            <dd>
                <p style="text-align:center">
                    <img src="~/File?id=@Model.Images.First(f => f.Image_Type == Blog.Models.ImageType.Avatar).Image_Id" alt="avatar" height="200px" width="300px" />
                </p>
            </dd>
        }


        <dd>
            <p style="text-align:right">
                @Html.DisplayFor(model => model.created_By)
            </p>
        </dd>

        <dd>
            <p style="text-align:right">
                @Html.DisplayFor(model => model.post_Date)
            </p>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>